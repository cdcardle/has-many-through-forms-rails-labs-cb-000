<h2><%= @post.title %></h2>

<h3><%= @post.content %></h3>

<h4>Comments:</h4>
<p>
  <% @post.comments.each do |comment| %>
    <%= comment.content %> - <%= comment.user.username%><br>
  <% end %>
</p>



<h4>Users who commented:</h4>
<p>
  <% users = [] %>
  <% @post.comments.each do |comment| %>
    <% users << comment.user if comment.user.username %>
  <% end %>
  <% users.uniq.each do |user| %>
    <%= link_to user.username, user_path(user) %><br>
  <% end %>
</p>
